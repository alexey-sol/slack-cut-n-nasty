{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2020",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "paths": {
            "@app/*": ["./src/app/*"],
            "@config/*": ["./src/config/*"],
            "@const/*": ["./src/utils/const/*"],
            "@graphql/*": ["./src/graphql/*"],
            "@root/*": ["./src/*"],
            "@utils/*": ["./src/utils/*"]
        }
    }
}
